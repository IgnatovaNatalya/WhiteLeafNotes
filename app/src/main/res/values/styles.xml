<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="toolbarTitleStyle" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/comfortaa_bold</item>
        <item name="android:textColor">?attr/android:textColorPrimary</item>
    </style>
    <style name="toolbarSubtitleStyle" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/comfortaa_medium</item>
        <item name="android:textColor">?attr/android:textColorSecondary</item>
    </style>

    <style name="StartScreenHeaderTitle">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/comfortaa_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="StartScreenItemTitle">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="StartScreenItemNotebookCount">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/nunito_medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="StartScreenItemAdd">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="StartScreenItemHeader">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="StartScreenItemEmpty">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/nunito_medium</item>
    </style>

    <style name="DrawerNotebookTitle">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="DrawerNoteTitle">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="DrawerCreateButton">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="NoteEditTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
        <item name="fontFamily">@font/comfortaa_bold</item>
    </style>

    <style name="NoteEditDate">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/nunito_medium</item>
    </style>

    <style name="NoteEditText">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
        <item name="fontFamily">@font/nunito_medium</item>
    </style>



</resources>