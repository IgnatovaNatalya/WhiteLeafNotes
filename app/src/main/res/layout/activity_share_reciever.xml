<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/share_receiver_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".presentation.shareReceive.ShareReceiverActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/share_receiver_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="false"
            app:navigationIcon="@drawable/ic_accept"
            app:navigationIconTint="?attr/colorOnSurface"
            app:subtitleTextAppearance="@style/toolbarSubtitleStyle"
            app:title="@string/saveNewNote"
            app:titleTextAppearance="@style/toolbarTitleStyle">

            <ImageButton
                android:id="@+id/btn_share_receiver_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_options"
                app:tint="?attr/android:textColorPrimary" />

        </com.google.android.material.appbar.MaterialToolbar>

        <include
            android:id="@+id/note_edit_container"
            layout="@layout/fragment_note_edit" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>